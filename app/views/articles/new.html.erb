<h1>Create a new article</h1>

<%= form_with model: @article do |form| %>
   <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <%= form.submit "Create a new article Now"%>
<% end %>